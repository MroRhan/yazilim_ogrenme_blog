<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yazılım Öğrenme Blog Sitesi</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>



</head>
<body>


    <div class="container">
        <nav class="navbar headerLogo navbar-expand-lg ">


            @if (User.IsInRole("1"))
            {
                <a class="btn btn-info mr-1" href="/Yonetim/Index" role="button"><i class="fas fa-user-cog"></i> Yönetim Paneli</a>
            }

            @if (User.IsInRole("1") || User.IsInRole("0"))
            {

                <a class="btn btn-danger mr-1" href="/Anasayfa/CikisYap" role="button"><i class="fas fa-sign-out-alt"></i> Çıkış Yap</a>
            }
            else
            {
                <a href="/Anasayfa/KayitOl" class="btn btn-primary mr-1"><i class="fas fa-user-graduate"></i> Üye Ol</a>
                <a class="btn btn-success mr-1" href="/Anasayfa/GirisYap" role="button"><i class="fas fa-sign-in-alt"></i> Giriş Yap</a>
            }




        </nav>
    </div>


 
       
    
 


    <div id="menu" class="container-fluid">

        <div class="container">
            <ul>
                <li>
                    <a href="/Anasayfa/Index" class="aktif"> <i class="fas fa-home"></i> <span>ANASAYFA</span></a>
                </li>

                <li>
                    <a href="/Anasayfa/Hakkimizda"><i class="far fa-file-word"></i><span> HAKKIMIZDA</span></a>
                </li>


                <li>
                    <a href="/Blog/Index"><i class="far fa-list-alt"></i><span> BLOG</span></a>
                </li>

                <li>
                    <a href="/Anasayfa/Iletisim"><i class="fas fa-file-signature"></i><span> İLETİŞİM</span></a>
                </li>
 
            </ul>

            <div class="arama  ">
                <form class="form-inline" method="get" action="/blog/ara?s=">
                    @Html.TextBox("s","",new { @class = "form-control mr-sm-2", @placeholder = "Ne aramıştınız?", @autocomplete="off"})

                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Ara</button>
                </form>
            </div>

        </div>

    </div>







    <div class="container">

        @RenderBody()



    </div>




</body>


<div class="container-fluid   card-footer" id="altAlan">
    <div class="copyright   text-center my-auto">
        <span class="text-white">Copyright &copy; Mr.oRhan @DateTime.Now.Year</span>
    </div>
</div>

</html>