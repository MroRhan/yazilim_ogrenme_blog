@model yazilim_ogrenme_blog.Models.Kullanicilar

@{
    ViewBag.Title = "Kullanici Güncelle";
    Layout = "~/Views/Shared/_Yonetim.cshtml";
}



@using (Html.BeginForm())
{


    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Adı</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    @Html.TextBoxFor(model => model.Ad, new { @class = "form-control" })
                </div>

            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Soyadınız</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="far fa-user"></i></span>
                    </div>
                    @Html.TextBoxFor(model => model.Soyad, new { @class = "form-control" })
                </div>

            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>E-posta Adresi</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-envelope-open-text" aria-hidden="true"></i></span>
                    </div>
                    @Html.TextBoxFor(model => model.Mail, new { @class = "form-control" })
                </div>

            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-thumbs-up"></i>&nbsp; Hesap Aktif mi?</span>
                    </div>
                    @Html.CheckBoxFor(model => model.Durum, new { @class = "form-control" })
                </div>

            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-crown"></i> &nbsp; Yönetici</span>
                    </div>

                    @Html.RadioButtonFor(model => model.Yetki, "1", new { @class = "form-control" })

                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-restroom"></i>&nbsp; Üye</span>
                    </div>

                    @Html.RadioButtonFor(model => model.Yetki, "0", new { @class = "form-control" })

                </div>


            </div>
        </div>

    </div>



    <div class="row">


    </div>

    <div class="mt-5">
        <button class="btn btn-info">Güncelle</button>
    </div>


    <div class="clear"></div>
}


@Html.ValidationSummary(false)
