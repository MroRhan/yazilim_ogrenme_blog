@using yazilim_ogrenme_blog.ViewModel.Yonetim
@model  YonetimModel

@{
    Layout = "~/Views/Shared/_Yonetim.cshtml";
}


@{
    ViewBag.Title = "Yönetim Paneline Hoşgeldiniz";
}



    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Toplam Yazı Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800  fa-2x">@Model.Yazilar.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>


        




        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">TOPLAM YORUM</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 fa-2x">@Model.Yorumlar.Where(@m => m.Durum == true).Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">ONAY BEKLEYEN YORUM SAYISI</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 fa-2x">@Model.Yorumlar.Where(@m => m.Durum == false).Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comment-slash fa-2x text-gray-300"></i>
                        </div>
                 
                    </div>
                </div>
            </div>
        </div>


        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Toplam Üye Sayısı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 fa-2x">@Model.Kullanicilar.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">AKTİF ÜYE SAYISI</div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800 fa-2x">@Model.Kullanicilar.Where(@m => m.Durum == true).Count()</div>
                                </div>
                                <div class="col">

                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">PASİF ÜYE SAYISI</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 fa-2x">@Model.Kullanicilar.Where(@m => m.Durum == false).Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-slash fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    </div>