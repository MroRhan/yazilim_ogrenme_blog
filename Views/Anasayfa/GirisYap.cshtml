@using yazilim_ogrenme_blog.ViewModel.Anasayfa
@model GirisYapModel


@if (User.IsInRole("0"))
{
    Response.Redirect("/Anasayfa/Index");
}
else if (User.IsInRole("1"))
{
      Response.Redirect("/Anasayfa/Index");
}
 


@{
    Layout = "~/Views/Shared/_Anasayfa.cshtml";
}


<link href="~/Content/LoginRegister.css" rel="stylesheet" />

<br />
<br />
<div class="container h-100 mt-5 p-5" id="girisYap">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="card">
            <h4 class="card-header">Giriş Formu | Yazılım Öğrenme</h4>
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Kullanıcı Adı / E-posta</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-address-card"></i></span>
                                    </div>
                                    @Html.TextBoxFor(model => model.Kullanici, new { @class = "form-control" })
                                </div>
                                <div class="help-block with-errors text-danger"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Parola</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-unlock" aria-hidden="true"></i></span>
                                    </div>
                                    @Html.TextBoxFor(model => model.Parola, new { @class = "form-control", type = "password" })
                                </div>
                                <div class="help-block with-errors text-danger"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">


                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Giriş Yap</button>
                        </div>
                    </div>

                    <div class="clear"></div>
                }

                @Html.ValidationSummary(false)
            </div>
        </div>
    </div>
</div>
